<?xml version="1.0" encoding="UTF-8"?>
<Layouts xmlns="http://asdev.ca/libjam-md/schemas/layouts.xsd">

    <!-- There can be many layouts within a single document to prevent having a bunch of them and anything within them can be linked.  -->
    <Layout name="layout_main" theme="${R.themes.example_theme}">

        <!-- The root view goes here -->

        <LinearLayout
                background="${R.theme.background}"
                id="root-linear-layout"
                gravity="middle-middle"
                orientation="horizontal">

            <TextView
                    id="greeting-text"
                    text="${R.strings.example-string}"
                    gravity="middle-middle"
                    text-gravity="middle-middle"
                    text-color="${R.theme.primary_text}"
                    text-font="${R.theme.font_title:14}"/>

            <CircularProgressView
                circle-gravity="middle-middle"
                gravity="middle-middle"
                />

        </LinearLayout>

    </Layout>

</Layouts>